.zheader {
  position: relative;
  height: 300px;
  background-image: linear-gradient(#ff9d2f, #ff6126);
}

h1 {
  padding: 100px 0;
  font: 44px "Arial";
  text-align: center;
}

header h1 {
  color: white;
}

.xxshape {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 100px;
}

svg {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 100px;
}


@media (max-width: 699px) {
  .svg--lg {
    display: none;
  }
}

@media (min-width: 700px) {
  .svg--sm {
    display: none;
  }
}